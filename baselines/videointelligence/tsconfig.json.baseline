  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "CommonJS",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "esm/src/*.ts",
    "esm/src/**/*.ts",
    "esm/test/*.ts",
    "esm/test/**/*.ts",
    "esm/system-test/*.ts"
  ]
}
