{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "dom"],
    "module": "NodeNext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": [
    "typescript/**/*.ts",
    "./index.d.ts",
    "protos/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
